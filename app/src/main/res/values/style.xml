<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:shadowColor">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="SmallText" parent="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="MediumText" parent="BaseText">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BigText" parent="BaseText">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="LargeText" parent="BaseText">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">4dp</item>
<!--        <item name="android:background">@drawable/button_shape</item>-->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">?attr/colorOnSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

</resources>