<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.cheaprecipes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".app.presentation.search.SearchActivity"
            android:parentActivityName=".app.presentation.main.MainActivity" />
        <activity android:name=".app.presentation.error.NoInternetPermissionActivity" />
        <activity
            android:name=".app.presentation.detail.DetailActivity"
            android:parentActivityName=".app.presentation.main.MainActivity" />
        <activity android:name=".app.presentation.split.SplitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".app.presentation.main.MainActivity" />
        <activity android:name=".app.presentation.main.OfflineMainActivity" /> <!-- AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_banner_app_id" />
    </application>

</manifest>